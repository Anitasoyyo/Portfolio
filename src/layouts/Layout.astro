 <!-- con new Date.getFullYear() se obtiene el año actual -->
		<script>
			// Función para manejar el tema.Si  en el html no encuentra un elemento con id theme-toggle, no hace nada y sale de la función para evitar errores.
			function handleTheme() {
				const themeToggle = document.getElementById('theme-toggle');
				
				if (!themeToggle) return;
				
				// Recuperar el tema guardado por el usuario
				//Lo busca en el localStorage del navegador y si no hay nada, usa 'light' pero si hay algo, usa ese valor.
				const savedTheme = localStorage.getItem('theme') || 'light';
				document.documentElement.setAttribute('data-theme', savedTheme);

				themeToggle.addEventListener('click', () => {
					const currentTheme = document.documentElement.getAttribute('data-theme');
					const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
					
					document.documentElement.setAttribute('data-theme', newTheme);
					localStorage.setItem('theme', newTheme);
				});
			}

			// Ejecutar cuando el DOM esté listo
			document.addEventListener('DOMContentLoaded', handleTheme);
		</script>
